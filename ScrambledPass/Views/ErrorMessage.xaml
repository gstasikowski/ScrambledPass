<Window x:Class="ScrambledPass.Views.ErrorMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScrambledPass.Views"
        mc:Ignorable="d"
        Title="ErroMessage" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label x:Name="lbl_message" Content="placeholder error message" HorizontalContentAlignment="Center" Margin="0,10,0,0"></Label>
            <Button HorizontalAlignment="Center" Width="30" Height="20" Content="OK" Margin="0,10,0,0"></Button>
        </StackPanel>
    </Grid>
</Window>
